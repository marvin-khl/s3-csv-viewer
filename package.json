{
  "name": "s3-file-viewer",
  "displayName": "AWS S3 File Viewer",
  "description": "Browse and open files directly from Amazon S3 buckets in VS Code using the AWS CLI v2.",
  "version": "1.0.0",
  "publisher": "marvin-kuehlmann",
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#0f172a",
    "theme": "dark"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/marvin-khl/s3-viewer"
  },
  "bugs": {
    "url": "https://github.com/marvin-khl/s3-viewer/issues"
  },
  "homepage": "https://github.com/marvin-khl/s3-viewer#readme",
  "license": "MIT",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Data Science",
    "Other"
  ],
  "keywords": [
    "AWS",
    "Amazon S3",
    "Cloud Storage",
    "CLI",
    "Data",
    "CSV",
    "Text",
    "DevOps",
    "Infrastructure"
  ],
  "activationEvents": [
    "onCommand:s3CsvViewer.openCsvFromS3",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "s3CsvViewer.openCsvFromS3",
        "title": "S3: Open Files from Bucket with AWS CLI"
      }
    ],
    "configuration": {
      "title": "S3 CSV Viewer",
      "properties": {
        "s3CsvViewer.awsProfile": {
          "type": "string",
          "default": "",
          "description": "AWS profile to use (exports AWS_PROFILE)."
        },
        "s3CsvViewer.awsRegion": {
          "type": "string",
          "default": "",
          "description": "AWS region to use (exports AWS_REGION)."
        },
        "s3CsvViewer.s3Uri": {
          "type": "string",
          "default": "",
          "description": "Default S3 URI seed when opening."
        },
        "s3CsvViewer.autoOpenOnStartup": {
          "type": "boolean",
          "default": false,
          "description": "Auto-open on startup."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.103.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.34.0",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
